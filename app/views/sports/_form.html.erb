

<div class ="container form_container">
<%= form_for(@sports, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">

    <div class="control-label col-sm-2">

    <%= f.label :name %>

    </div>

    <div class="col-sm-8">

    <%= f.text_field :name, class: "form-control", placeholder: "Name Of Sports", autofocus: true %>

    </div>
</div>
  

   <div class="form-group">

      <div class="control-label col-sm-2">

      <%= f.label :Players %>

      </div>

      <div class="col-sm-8">

      <%= f.text_field :no_players, class: "form-control", placeholder: "Total Players", autofocus: true %>

      </div>
</div>

 <div class="form-group">

    <div class="control-label col-sm-2">

    <%= f.label :Discription %>

    </div>

    <div class="col-sm-8">

    <%= f.text_area :discription,rows:6, class: "form-control", placeholder: "Discription", autofocus: true %>

    </div>
</div>

<div class ="form-group">
    <div class="col-sm-8">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">Upload</span>
    </div>
    <div class="custom-file">
      <input type="file" class="custom-file-input" id="inputGroupFile01">
      <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
    </div>
  </div>
  </div>
</div>
<div class ="form-group">
    <div class="col-sm-8">
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck1">
        <label class="custom-control-label" for="customCheck1">Agree this Form</label>
      </div>
    </div>
</div>

<div class="form-group">

  <div class="col-sm-offset-2 col-sm-10">

  <%= f.submit(@sports.new_record? ? :"Create" : :"Update",class: 'btn btn-primary btn-lg')%>

  </div>

</div>


<% end %>
</div>
